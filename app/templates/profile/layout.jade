doctype 5
html
  head
    title #{upperName} Lindsey&apos;s webpage

    meta(charset='utf-8')
    meta(name='description', content='Jackie and Levi Lindsey&apos;s personal website')
    meta(name='viewport', content='width=device-width')

    link(rel='shortcut icon', href='/images/favicon.ico')
    link(rel='stylesheet', href='/stylesheets/#{lowerName}Profile.css')
  body
    #contentColumn
      #banner
        #titleCircle
          img(src='/images/#{lowerName}_circle.png', alt='Circle')
          h1
            | #{upperName}<br>Lindsey

        a#ribbon(href='#{ribbonLink}')
          img(src='/images/#{lowerName}_ribbon.png', alt='#{ribbonAlt}')

        #internalLinks
          - var profilePages = [{link: 'about', name: 'About'}, {link: 'projects', name: 'Projects'}, {link: 'resume', name: 'Resume'}, {link: 'follow', name: 'Follow Me'}, {link: '../', name: 'J & L Home'}];
          ul
            each page in profilePages
              li
                a(href='/#{lowerName}/#{page.link}')
                  | #{page.name}

      #mainArea
        block content

      include footer
